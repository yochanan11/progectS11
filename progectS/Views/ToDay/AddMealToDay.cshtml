@model progectS.VModel.VMAddTodayMeal

@{
    ViewData["Title"] = "AddMealToDay";
}

<h4>הוספת ארוחה שאכלת היום</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMealToDay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserID" hidden="hidden" />
            <input asp-for="DayID" hidden="hidden" />


            <div class="form-group">
                <label asp-for="TypeId" class="control-label"></label>
                <select asp-for="TypeId" class="form-control">
                    @foreach (TypeOfMeal type in Model.TypeOfMeals)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="הוסף" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowPlans" asp-controller="plane" asp-route-id="@DAL.Get.User.ID">הצגת התוכניות שלי</a>|

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
