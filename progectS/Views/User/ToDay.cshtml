@model progectS.VModel.VMToDay

<h4>הוסף מאכל</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ToDay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodayFoodsInMeal.Mood" class="control-label"></label>
                <input asp-for="TodayFoodsInMeal.Mood" class="form-control" />
                <span asp-validation-for="TodayFoodsInMeal.Mood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label"></label>
                <select asp-for="TypeId" class="form-control">
                    @foreach (TypeOfMeal type in Model.type)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodId" class="control-label"></label>
                <select asp-for="FoodId" class="form-control">
                    @foreach (Food food in DAL.Get.Foods)
                    {
                        <option value="@food.ID">@food.Name</option>
                    }
                </select>
                <span asp-validation-for="FoodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodayFoodsInMeal.Quantity" class="control-label"></label>
                <input asp-for="TodayFoodsInMeal.Quantity" class="form-control" />
                <span asp-validation-for="TodayFoodsInMeal.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="הוסף מאכל" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

