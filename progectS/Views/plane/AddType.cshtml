@model progectS.VModel.VMAddType

@{
    ViewData["Title"] = "הוספת סוג מאכל";
}


<h1>סוגי ארוחות</h1>
<hr />

<div class="row">
    @foreach (var item in Model.Types)
    {
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">@Html.DisplayNameFor(model => model.Types.First().Name)</h5>
                    <p class="card-text"> @Html.DisplayFor(modelItem => item.Name)</p>
                    <a href="#" class="btn btn-primary">עוד על @item.Name</a>
                </div>
            </div>
        </div>
    }
</div>
<hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddType">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="@Model.Type.Name" class="control-label"></label>
                    <input asp-for="@Model.Type.Name" placeholder="הכנס סוג ארוחה" class="form-control" />
                    <span asp-validation-for="@Model.Type.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="צור" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ShowPlanes" asp-route-id="@DAL.Get.User.ID">חזרה לתוכניות</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
