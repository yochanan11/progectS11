@model progectS.VModel.VMAddFoodInMeal

@{
    ViewData["Title"] = "הוספת מאכל לארוחה";
}

<h1>@Model.Meal.MealName.Name</h1>


<hr />
<div>
    <a asp-action="MealDetails" asp-route-id="@Model.MealID" class="btn btn-primary">בחזרה לארוחה</a>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFoodsInMeal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="MealID" hidden="hidden" />

                <label asp-for="FoodID" class="control-label"></label>
                
                <select asp-for="FoodID" class="form-control" aria-label="בחר מאכל מתוך הרשימה">
                    @foreach (Food food in Model.FromApi)
                    {
                        <option class="" value="@food.ID">@food.Name</option>
                    }

                </select>
                <span asp-validation-for="FoodID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodInMeal.Quantity" class="control-label"></label>
                <input asp-for="FoodInMeal.Quantity" class="form-control" />
                <span asp-validation-for="FoodInMeal.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="הוסף" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
